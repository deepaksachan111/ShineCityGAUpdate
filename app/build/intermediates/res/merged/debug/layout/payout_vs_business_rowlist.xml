<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_row"
    android:orientation="vertical">

    <!-- Closing Date Row !-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Closing Date "
            android:textSize="19sp" />


        <TextView
            android:id="@+id/pbClosingDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=" Medium Text"
            android:layout_marginLeft="130dp"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
    </RelativeLayout>
    <!-- Payout No Row !-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Payout No "
            android:textSize="19sp" />


        <TextView
            android:id="@+id/pbPayoutNoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=" Medium Text"
            android:layout_marginLeft="130dp"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
    </RelativeLayout>

    <!-- Self Income Row !-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Self Incm  "
            android:textSize="19sp" />



        <TextView
            android:id="@+id/pbSelfIncmTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=" Medium Text"
            android:textColor="#000000"
            android:layout_marginLeft="130dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
    </RelativeLayout>



    <!-- Joining Date Row !-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gross Amt "
            android:textSize="19sp" />

        <TextView
            android:id="@+id/pbGrossAmountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#000000"
            android:text=" Medium Text"
            android:layout_marginLeft="130dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
    </RelativeLayout>


    <!-- Tds Row !-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tds "
            android:textSize="19sp" />

        <TextView
            android:id="@+id/pbTdsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=" Medium Text"
            android:layout_marginLeft="130dp"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
    </RelativeLayout>

    <!-- Login Id Row !-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="P.Fee "
            android:textSize="19sp" />


        <TextView
            android:id="@+id/pbProcessingFeeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#000000"
            android:layout_marginLeft="130dp"
            android:text=" Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
    </RelativeLayout>


    <!-- Net Income Row !-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Net Amt "
            android:textSize="17sp" />


        <TextView
            android:id="@+id/pbNetAmountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="130dp"
            android:textColor="#000000"
            android:text=" Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
    </RelativeLayout>

</LinearLayout>
