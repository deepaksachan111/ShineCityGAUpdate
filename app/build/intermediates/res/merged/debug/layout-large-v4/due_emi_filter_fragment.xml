<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center_vertical"
                android:text="Site"
                android:textSize="23sp" />

            <Spinner
                android:id="@+id/dueEmifilter_SiteSpinner"
                style="@style/spinner_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="7.5" />
        </LinearLayout>

        <!--  <TextView
              android:id="@+id/textView5"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:layout_marginTop="15dp"
              android:layout_marginRight="25dp"
              android:text="Birthdays "
              android:textColor="#000"
              android:textSize="17sp"
              android:textStyle="bold" />
  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/btn_background"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/dueEmiFilter_FromDateTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8.5"
                android:gravity="center_vertical"
                android:hint="From Date"
                android:paddingLeft="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="24sp" />

            <Button
                android:id="@+id/dueEmiFilter_FromDateBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1.5"
                android:background="@mipmap/calendar_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_background"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/dueEmiFilter_ToDateTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8.5"
                android:gravity="center_vertical"
                android:hint="To Date"
                android:paddingLeft="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="24sp" />

            <Button
                android:id="@+id/dueEmiFilter_ToDateBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1.5"
                android:background="@mipmap/calendar_icon" />

        </LinearLayout>


        <Button

            android:id="@+id/dueEmiFilter_getDetailBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"
            android:background="#303F9F"
            android:text="Get Details"
            android:textSize="24sp"
            android:textColor="#fff" />

    </LinearLayout>
</LinearLayout>
