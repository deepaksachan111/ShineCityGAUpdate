<?xml version="1.0" encoding="utf-8"?>
<myappplication.noida.quaere.groupalternate.MainLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:background="#5C6BC0">


    <!-- This holds our menu -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#303F9F"></LinearLayout>

        <!-- User name Layout -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#5C6BC0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_main_userNameTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:gravity="center"
                android:padding="14dp"
                android:text="User Name"
                android:textColor="#ffffff"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_complete">

        </LinearLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrollView3"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- Dashboard Layout -->

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="#5C6BC0"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/dashboard_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:background="@mipmap/dashboard"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/activity_main_tvdashboard"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="7.5"
                            android:layout_marginLeft="16dp"
                            android:paddingBottom="8dp"
                            android:text="Dashboard"
                            android:textColor="#ffffff"
                            android:textSize="28sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_complete"></LinearLayout>
                </LinearLayout>
                <!-- My Profile Layout -->
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="#5C6BC0"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/my_profile_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:background="@mipmap/profile1"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/activity_main_tvMyProfile"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="7.5"
                            android:layout_marginLeft="16dp"
                            android:paddingBottom="8dp"
                            android:text="My Profile"
                            android:textColor="#ffffff"
                            android:textSize="28sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_complete"></LinearLayout>
                </LinearLayout>


                <!-- Placement Detail Layout -->
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="#5C6BC0"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/placement_detail_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:background="@mipmap/placementdetail"
                             />

                        <TextView
                            android:id="@+id/activity_main_tvPlacementDetails"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="7.5"
                            android:paddingBottom="8dp"
                            android:text="Placement Details"
                            android:textColor="#ffffff"
                            android:textSize="28sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_complete"></LinearLayout>
                </LinearLayout>


                <!-- My Account fragment-->
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="#5C6BC0"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/myaccount_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:background="@mipmap/account"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/activity_main_tvMyAccount"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="7.5"
                            android:paddingBottom="8dp"
                            android:text="Account(Reports)"
                            android:textColor="#ffffff"
                            android:textSize="28sp" />

                        <ImageView
                            android:id="@+id/down_arrow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="9dp"
                            android:layout_weight="0.6"
                            android:background="@mipmap/down" />

                        <ImageView
                            android:id="@+id/up_arrow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="9dp"
                            android:layout_weight="0.6"
                            android:background="@mipmap/up_icon"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_complete"></LinearLayout>
                </LinearLayout>
                <!-- Expandable view -->
                <LinearLayout
                    android:id="@+id/expandlayout"
                    android:layout_width="match_parent"
                    android:layout_height="365dp"
                    android:background="#8C9EFF"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ListView
                        android:id="@+id/expandableListView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"></ListView>

                </LinearLayout>


                <!-- My E-pin -->
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="#5C6BC0"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/epin_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:background="@mipmap/e_pin"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/activity_main_menu_e_pin"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="7.5"
                            android:paddingBottom="10dp"
                            android:text="My E-pin"
                            android:textColor="#ffffff"
                            android:textSize="28sp" />

                        <ImageView
                            android:id="@+id/epin_down_arrow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="9dp"
                            android:layout_weight="0.6"
                            android:background="@mipmap/down"
                             />

                        <ImageView
                            android:id="@+id/epin_up_arrow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="9dp"
                            android:background="@mipmap/up_icon"
                            android:layout_weight="0.6"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_complete"></LinearLayout>
                </LinearLayout>
                <!-- My E-pin expandable view -->
                <LinearLayout
                    android:id="@+id/epin_expandlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#8C9EFF"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/expandable_epin_Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="20dp"
                        android:text="Epin Details "
                        android:textColor="#fff"
                        android:textSize="24sp"
                        ></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/line_complete"></LinearLayout>

                    <TextView
                        android:id="@+id/expandable_register_epin_Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="20dp"
                        android:text="Register Epin "
                        android:textColor="#fff"
                        android:textSize="24sp"
                        ></TextView>

                </LinearLayout>

              <!--  &lt;!&ndash; Training Layout &ndash;&gt;
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="#040f20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/training_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:background="@mipmap/training"
                             />

                        <TextView
                            android:id="@+id/activity_main_menu_training"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="7.5"
