<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp"
    android:background="@drawable/listview_row"
    android:orientation="vertical">

        <!-- Payout No -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.7"
            android:layout_marginLeft="3dp"
            android:gravity="center_vertical"
            android:text="Payout No "
            android:textSize="19sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="  "
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payout_noTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_marginLeft="3dp"
            android:gravity="center_vertical"
            android:text=" Medium Text"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
    </LinearLayout>

    <!-- Member Name Row !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:orientation="horizontal"
        android:weightSum="10">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.7"
            android:layout_marginLeft="3dp"
            android:gravity="center_vertical"
            android:text="Name "
            android:textSize="19sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="  "
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payout_memberTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="6"
            android:layout_marginLeft="3dp"
            android:text=" Medium Text"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
    </LinearLayout>


    <!-- Joining Date Row !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.7"
            android:gravity="center_vertical"
            android:text="Net Amount "
            android:layout_marginLeft="3dp"
            android:textSize="19sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="  "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payout_netamoutTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_marginLeft="3dp"
            android:gravity="center_vertical"
            android:text=" Medium Text"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
    </LinearLayout>


    <!-- Login Id Row !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.7"
            android:gravity="center_vertical"
            android:text="Gross Amount "
            android:layout_marginLeft="3dp"
            android:textSize="19sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="  "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payout_grossAmoutTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:text=" Medium Text"
            android:layout_marginLeft="3dp"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
    </LinearLayout>

    <!-- Mobile No Row !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.7"
            android:gravity="center_vertical"
            android:text="Closing Date "
            android:layout_marginLeft="3dp"
            android:textSize="19sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="  "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payout_closingDateTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:layout_marginLeft="3dp"
            android:text=" Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
    </LinearLayout>

</LinearLayout>
