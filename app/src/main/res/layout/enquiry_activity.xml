<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#303F9F">

        <ImageView
            android:id="@+id/enquiry_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@android:drawable/ic_dialog_dialer" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Enquiry "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff" />
    </LinearLayout>
    <TextView
        android:id="@+id/enquiry_queryTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/enquiry_query"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/enquiry_queryEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:gravity="top"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:layout_weight="0.25"
        android:background="@drawable/edit_layout_bg"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="Remarks"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/enquiry_remarksEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:layout_weight="0.1"
        android:background="@drawable/edit_layout_bg"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button

        android:id="@+id/enquiry_submitBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="#303F9F"
        android:text="Submit"
        android:textColor="#fff" />
</LinearLayout>
