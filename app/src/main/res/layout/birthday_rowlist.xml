<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_row"
    android:orientation="vertical">

        <!-- Name-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="7dp"
        android:layout_marginLeft="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:text=" Name  "
            android:textSize="19sp" />


        <TextView
            android:id="@+id/birthday_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="130dp"
            android:text=" Medium Text"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />

    </RelativeLayout>
    <!-- Member Name Row !-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:id="@+id/birthday_layout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bdddtv"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:text=" Birthday "
            android:textSize="19sp" />


        <TextView
            android:id="@+id/birthday_dobTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_marginLeft="130dp"
            android:text=" Medium Text"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/bdTv"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/birthday_dobTv"
            android:layout_alignBottom="@+id/birthday_dobTv"
            android:text="Happy Birthday"
            android:textColor="#000000"
            android:textSize="16sp" />-->
        <ImageView
            android:id="@+id/birthday_cake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/birthday_dobTv"
            android:layout_marginLeft="6dp"
            android:layout_alignBottom="@+id/birthday_dobTv"
            android:layout_marginRight="3dp"
            android:layout_weight="0.5"
            android:background="@mipmap/birthday"/>
    </RelativeLayout>


    <!-- Joining Date Row !-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Login Id "
            android:layout_marginLeft="3dp"
            android:textSize="19sp" />


        <TextView
            android:id="@+id/birthday_loginIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="130dp"
            android:text=" Medium Text"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
    </RelativeLayout>


    <!-- Login Id Row !-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Member Type "
            android:layout_marginLeft="3dp"
            android:textSize="19sp" />


        <TextView
            android:id="@+id/birthday_memTypeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=" Medium Text"
            android:layout_marginLeft="130dp"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />
    </RelativeLayout>

    <!-- Mobile No Row !-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Mobile "
            android:layout_marginLeft="3dp"
            android:textSize="19sp" />


        <TextView
            android:id="@+id/birthday_mobileTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#000000"
            android:layout_marginLeft="130dp"
            android:text=" Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19sp" />

    </RelativeLayout>

</LinearLayout>
